<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urvika.gola.filvoice">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnrollmentSuccess"
            android:label="@string/title_activity_enrollment_success" />
        <activity android:name=".AuthenticationSuccess" />
        <activity android:name=".PhraseListView" />
        <activity
            android:name=".record"
            android:label="@string/title_activity_record" />
        <activity android:name=".SignIn" />
        <activity android:name=".AccessDenied" />
        <activity android:name=".EnrollmentDenied"></activity>
    </application>

</manifest>